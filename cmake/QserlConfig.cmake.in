get_filename_component(Qserl_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
include(CMakeFindDependencyMacro)

list(APPEND CMAKE_MODULE_PATH ${Qserl_CMAKE_DIR})

# ----------------------------------------
find_dependency(Boost 1.55 REQUIRED MODULE COMPONENTS chrono system serialization)
find_dependency(EigenLgsm REQUIRED CONFIG)
